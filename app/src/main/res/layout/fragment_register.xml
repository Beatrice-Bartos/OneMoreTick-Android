<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark3">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_create_account_drawable"
        android:background="@drawable/solid_shape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/margin_space_40"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="@string/create_account"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/margin_space_40"
            android:layout_marginTop="@dimen/default_margin"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="@string/register_text_1"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space_40"
        android:layout_marginTop="100dp"
        android:layout_marginRight="@dimen/margin_space_40"
        android:hint="@string/email"
        android:textColorHint="@color/blue_dark1"
        app:boxBackgroundColor="@color/gray_light"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/blue_dark1"
        app:endIconMode="clear_text"
        app:endIconTint="@color/blue_dark1"
        app:hintTextColor="@color/blue_dark1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_text_input_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_field"
            android:drawableStart="@drawable/email_icon"
            android:fontFamily="@font/nunito_sans"
            android:inputType="textEmailAddress"
            android:minHeight="@dimen/height_field"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space_40"
        android:layout_marginTop="@dimen/default_space"
        android:layout_marginRight="@dimen/margin_space_40"
        android:hint="@string/password"
        android:textColorHint="@color/blue_dark1"
        app:boxBackgroundColor="@color/gray_light"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/blue_dark1"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/blue_dark1"
        app:hintTextColor="@color/blue_dark1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_text_input_editText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_field"
            android:drawableStart="@drawable/password_icon"
            android:fontFamily="@font/nunito_sans"
            android:inputType="textPassword"
            android:minHeight="@dimen/height_field"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/rolesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_space_40"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/margin_space_40"
        android:layout_marginBottom="15dp"
        android:focusable="true"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="@string/register_now"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_space_40"
        android:layout_marginBottom="@dimen/margin_space_50"
        android:background="@drawable/shape_button_blue"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/sign_up"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_text_input_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>